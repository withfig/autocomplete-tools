{
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib/",
    "rootDir": "src/",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": ["test/", "node_modules/", "lib/"]
}
